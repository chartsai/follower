{
  "manifest_version": 2,

  "name": "follower",
  "description": "This extension help you follow the blogs!",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Open follower page"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
